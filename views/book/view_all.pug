extends ../layout

block content
    h3 Books
    table
        thead
            tr
                th Title
                th Author
                th Publisher
                th Genre
                th Pages
                th Cover
                th Description
                th
        tbody
            each book in books
                tr
                    td= book.title
                    td= book.author
                    td= book.publisher
                    td= book.genre
                    td= book.pages
                    td= book.cover
                    td= book.description